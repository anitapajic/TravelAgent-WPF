<Window x:Class="TravelAgentTim19.View.Edit.EditAttractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        xmlns:local="clr-namespace:TravelAgentTim19.View.Edit"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="EditAttractionWindow" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid>
        
        <Grid x:Name="InfoGrid" Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <TextBlock Text="INFO ATRAKCIJE" FontSize="20" FontWeight="Bold" Margin="-20, 10, 0,0"/>
        
            <!-- Name -->
            <TextBlock Text="Naziv:" Grid.Row="1" Margin="10"/>
            <TextBlock Text="{Binding Attraction.Name}" Grid.Row="1" Grid.Column="1" Margin="10" Width="200"/>

            
            <!-- Rating -->
            <TextBlock Text="Cena:" Grid.Row="2" Margin="10"/>
            <TextBlock Text="{Binding Attraction.Price}" Grid.Row="2" Grid.Column="1" Margin="10" Width="200"/>
        
            <!-- Location -->
            <TextBlock Text="Lokacija:" Grid.Row="3" Margin="10"/>
            <TextBlock Text="{Binding Attraction.Location}" Grid.Row="3" Grid.Column="1" Margin="10" Width="200"/>
         
            <!-- Decription -->
            <TextBlock Text="Opis:" Grid.Row="4" Margin="10"/>
            <TextBlock Text="{Binding Attraction.Description}" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Margin="10" Width="200"/>
            
            <!-- Image -->
            <TextBlock Text="SLIKE" Grid.Row="5" Margin="10"></TextBlock>
            <!-- <ListView BorderBrush="Gray" BorderThickness="2" Grid.Row="5"  Height="80" Width="200"> -->
            <!--     <ItemsControl Margin="10" x:Name="myImages"> -->
            <!--         <ItemsControl.ItemsPanel> -->
            <!--             <ItemsPanelTemplate > -->
            <!--                 <StackPanel Orientation="Horizontal"/> -->
            <!--             </ItemsPanelTemplate> -->
            <!--         </ItemsControl.ItemsPanel> -->
            <!--     </ItemsControl> -->
            <!-- </ListView> -->

        
            <!-- Submit button -->
            <Button Content="Izmeni" Click="EditAttractionBtn_Clicked" Grid.Row="7"  HorizontalAlignment="Center" Width="100" MaxHeight="40"/>

        </Grid>
            <Grid x:Name="EditGrid" Visibility="Hidden"  Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        
            <!-- Title -->
            <TextBlock Text="IZMENA ATRAKCIJE" FontSize="20" FontWeight="Bold" Margin="-20, 10, 0,0"/>
        
            <!-- Name -->
            <TextBlock Text="Naziv:" Grid.Row="1" Margin="10"/>
            <TextBox x:Name="NameBox" Text="{Binding Attraction.Name}" Grid.Row="1" Grid.Column="1" Margin="10" Width="200"/>
        
            <!-- Price -->
            <TextBlock Text="Cena:" Grid.Row="2" Margin="10"/>
            <TextBox x:Name="PriceBox" Text="{Binding Attraction.Price}" Grid.Row="2" Grid.Column="1" Margin="10" Width="200"/>

            <!-- Location -->
            <TextBlock Text="Lokacija:" Grid.Row="3" Margin="10"/>
            <TextBox x:Name="LocationBox" Text="{Binding Attraction.Location.Address}" Grid.Row="3" Grid.Column="1" Margin="10" Width="200"/>
        
            <!-- Decription -->
            <TextBlock Text="Opis:" Grid.Row="4" Margin="10"/>
            <TextBox x:Name="DescBox" Text="{Binding Attraction.Description}" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Margin="10" Width="200"/>

            <!-- Image -->
            <TextBlock Grid.Row="5" Text="Drag and drop slike ovde:" Margin="10"/>
            <ListView BorderBrush="Gray" BorderThickness="2" Grid.Row="5"  Height="80" Width="200"
                      AllowDrop="True" DragEnter="Border_DragEnter" Drop="Border_Drop"
                      MouseDown="ListView_MouseClick">
                <ItemsControl Margin="10" x:Name="ImageList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate >
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ListView>

        
            <!-- Submit button -->
            <Button Content="Nazad na informacije" Click="InfoAttractionBtn_Clicked" Grid.Row="7"  HorizontalAlignment="Center" Width="160" MaxHeight="50" Margin="0, 20,200,0"/>
            <Button Content="Sacuvaj" Click="SaveChangesBtn_Clicked" Grid.Row="7"  HorizontalAlignment="Center" Width="160" MaxHeight="50" Margin="0, 20,-200,0"/>
        </Grid>
    </Grid>
        </ScrollViewer>
</Window>
