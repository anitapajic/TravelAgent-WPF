                    <Button Grid.ColumnSpan="3" Style="{StaticResource DeleteButton}" Click="EditAttractionBtn_Clicked"  HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" MaxHeight="40" Margin="0 40 40 15">
