<Window x:Class="TravelAgentTim19.View.AgentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        xmlns:service="clr-namespace:TravelAgentTim19.Service"
        xmlns:fa="http://schemas.fontawesome.com/wpf"
        xmlns:wpf="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="CanResizeWithGrip" 
        AllowsTransparency="True"
        Background="Transparent"
        Title="Glavni prozor" Height="600" Width="1100"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
        
   
    <Window.CommandBindings>
        <!-- <CommandBinding Command="cmd:RoutedCommands.Enable" CanExecute="Enable_CanExecute" Executed="Enable_Executed"></CommandBinding> -->
        <!-- <CommandBinding Command="cmd:RoutedCommands.Komanda" CanExecute="Komanda_CanExecute" Executed="Komanda_Executed"></CommandBinding> -->
        <!-- <CommandBinding Command="cmd:RoutedCommands.Ugradjene" CanExecute="Ugradjene_CanExecute" Executed="Ugradjene_Executed"></CommandBinding> -->
    </Window.CommandBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left manu-->
        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#3AA9AD" Offset="0"></GradientStop>
                    <GradientStop Color="#3AADA1" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            
            <StackPanel>
                <!-- Username-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 35 0 0">
                    <Border CornerRadius="250" Width="45" Height="45">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="#11172F" Offset="0"></GradientStop>
                                <GradientStop Color="#515F98" Offset="1"></GradientStop>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="A" Foreground="#FFFFFF" FontSize="22" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center" Margin="3 0 0 2"></TextBlock>
                    </Border>
                    
                    <StackPanel Margin="10 0 0 0" VerticalAlignment="Center">
                        <TextBlock Text="Administrator" FontSize="15" Margin="0 0 0 5" Foreground="#FFFFFF"></TextBlock>
                    </StackPanel>
                </StackPanel>
                <Separator Height="0.8" Margin="20 30" Background="#FFFFFF"></Separator>
                
                <!-- Manu Buttons-->
                <Button Style="{StaticResource ManuButton}">
                    <StackPanel Orientation="Horizontal">
                        <wpf:FontAwesome Icon="Car" Style="{StaticResource ManuButtonIcon}"/>
                        <TextBlock Text="Putovanja" Style="{StaticResource ManuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource ManuButton}">
                    <StackPanel Orientation="Horizontal">
                        <wpf:FontAwesome Icon="Map" Style="{StaticResource ManuButtonIcon}"/>
                        <TextBlock Text="Turisticke atrakcije" Style="{StaticResource ManuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource ManuButton}">
                    <StackPanel Orientation="Horizontal">
                        <wpf:FontAwesome Icon="Hotel" Style="{StaticResource ManuButtonIcon}"/>
                        <TextBlock Text="Smjestaj" Style="{StaticResource ManuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource ManuButton}">
                    <StackPanel Orientation="Horizontal">
                        <wpf:FontAwesome Icon="Cutlery" Style="{StaticResource ManuButtonIcon}"/>
                        <TextBlock Text="Restorani" Style="{StaticResource ManuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource ManuButton}" Margin="0 170 0 20">
                    <StackPanel Orientation="Horizontal">
                        <wpf:FontAwesome Icon="PowerOff" Style="{StaticResource ManuButtonIcon}" />
                        <TextBlock Text="Izloguj se" Style="{StaticResource ManuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                
                
            </StackPanel>
        </Border>
        
        <!-- Main section-->
        <Border Grid.Column="1" CornerRadius="0 10 10 0">
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Color="#EBEAE5" Offset="0"></GradientStop>
                    <GradientStop Color="#FFFFFF" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            
           <Grid>
               <Grid.RowDefinitions>
                   <RowDefinition Height="Auto"></RowDefinition>
                   <RowDefinition Height="*"></RowDefinition>
               </Grid.RowDefinitions>
               
               <!-- Top manu section-->
               <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 30 20">
                   <Button Content="Sva putovanja" Style="{StaticResource TopManuButton}" FontWeight="Medium"></Button>
                   <Button Content="Mapa" Style="{StaticResource TopManuButton}" FontWeight="Medium"></Button>
                   <Button Content="Rezervacije" Style="{StaticResource TopManuButton}" FontWeight="Medium"></Button>
                   <Button Content="Kupljeni aranzmani" Style="{StaticResource TopManuButton}" FontWeight="Medium"></Button>
                   <Button Content="Prodata putovanja" Style="{StaticResource TopManuButton}" FontWeight="Medium"></Button>
                   <Button Content="Prodati aranzmani" Style="{StaticResource TopManuButton}" FontWeight="Medium"></Button>
               </StackPanel>
               <TextBlock Text="Putovanja" FontSize="23" HorizontalAlignment="Left" Margin="50 35 0 20"></TextBlock>
               
               <Grid Grid.Row="1" Margin="50 20 15 40">
                   <Grid.ColumnDefinitions>
                       <ColumnDefinition Width="*"/>
                       <ColumnDefinition Width="*"/>
                       <ColumnDefinition Width="*"/>
                   </Grid.ColumnDefinitions>
                   
               </Grid>
           </Grid>
        </Border>
    </Grid>
    
    
    
    
    
    
    
    
    
    
